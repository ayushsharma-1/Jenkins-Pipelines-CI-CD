pipeline {
  agent any
  stages {
    stage('Check Node.js Version') {
      steps {
        script {
          echo 'Starting Node.js version check...'
        }
        sh 'node --version'
        script {
          echo 'Node.js version check completed.'
        }
      }
    }
    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }
  }
  post {
    always {
      echo 'Pipeline execution completed.'
    }
  }
}
