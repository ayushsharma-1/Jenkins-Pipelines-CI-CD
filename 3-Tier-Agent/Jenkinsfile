pipeline {
    agent none
    stages {
        stage('Back-end') {
            agent {
                docker { image 'maven:3.8.1-adoptopenjdk-11' }
            }
            steps {
                sh '''
                    cd backend || exit 1
                    ls -al  # Debugging step to check files
                    mvn clean install
                '''
            }
        }
        stage('Front-end') {
            agent {
                docker { image 'node:16-alpine' }
            }
            steps {
                sh '''
                    cd frontend || exit 1
                    ls -al  # Debugging step to check files
                    npm install
                    npm run build
                '''
            }
        }
        stage('Database') {
            agent {
                docker { image 'mysql:latest' }
            }
            steps {
                sh '''
                    mysql --version
                    echo "SHOW TABLES;" | mysql -u root -proot
                '''
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
